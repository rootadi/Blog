      <style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    border-radius: 5px; /* 5px rounded corners */
}
/* On mouse-over, add a deeper shadow */
.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}
/* Add some padding inside the card container */
.container {
    padding: 2px 16px;
}
/* Add rounded corners to the top left and the top right corner of the image */
img {
    border-radius: 5px 5px 0 0;
}
.bg {
  /* The image used */
  background-image: url(https://images.pexels.com/photos/1037992/pexels-photo-1037992.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940);

  /* Full height */
  height: 100%;

  /* Center and scale the image nicely */
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}
</style>
</head>
<body>
  <div class="bg">
        <nav class="navbar navbar-expand-lg  navbar-transparent fixed-top" style="">
            <div class="container-fluid" style="opacity: 0.5">
                <div class="navbar-header" style="margin-top: 5px">
                    <a class="navbar navbar-brand" href="/campgrounds" style="text-decoration: none;color: black" ><big>Blogs</big></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <% if(!currentUser){ %>
                        <li style="margin-top: 5px;"><a href="/login" style="text-decoration: none;color: black">Login</a></li>
                        <li style="margin-top: 5px"><a href="/register" style="text-decoration: none;color: black">Sign Up</a></li>
                       <% }else{ %>
                        <li style="margin-top: 5px"><a href="#" style="text-decoration: none;color: black"><i>Signed in as </i> <strong><%= currentUser.username %></strong> </a></li> 
                        <li style="margin-top: 5px"><a href="/logout" style="text-decoration: none;color: black">Logout</a></li> 
                        <%}%>
                    </ul>
                </div>
                </div>
              </nav>
<section class="h-10000" style="display: flex; flex-wrap: wrap;">
	<div class="container" id="pop">
        <div class="jumbotron">
          <div class="col-lg-12">
           <h1><i>Bloggers</i></h1>
           <br>
           <p>Have a look on the amazing collection of writeups from amazing people.</p>
           <br>
          </div>
        	     <div class="row text-center h-1000">
       		 	        <%  users.forEach(function(user){ %>
                    <div class="col-md-3 col-sm-6 mx-left">
                    <a href="/users/<%=user._id%>" style="text-decoration: none">
        <div class="card" style="width:250px;height: 380px; background-color: #eeeeee">
            <img class="card-img-top" style="width:100%;" src="<%=user.image%>">
                <div class="caption">
                    <h3 class="card-title" style="padding-top: 25px"><%= user.username %></h3>   
                </div>
        </div>
    							</a>
   								 <br><br>
							</div> 


						<%  }); %>
			</div>
    </div>
</div>
</section>
